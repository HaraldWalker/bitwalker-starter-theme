{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">
	<div class="uk-offcanvas-content">
		<header id="top-head" class="uk-position-fixed">
			{% block header %}
				<div class="uk-container uk-container-expand uk-background-primary">
					<nav class="uk-navbar uk-light" data-uk-navbar="mode:click">
						<div class="uk-navbar-left">
							<a class="uk-navbar-item uk-logo" href="{{ site.url }}">{{ site.name }}</a>
						</div>
						<div class="uk-navbar-center">
							<div class="uk-navbar-item uk-visible@s">
								<form action="dashboard.html" class="uk-search uk-search-default">
									<span data-uk-search-icon></span>
									<input class="uk-search-input search-field" type="search" placeholder="Search">
								</form>
							</div>
						</div>
						<div class="uk-navbar-right">
						{% include "menu.twig" with {'top_menu': top_menu.get_items} %}
						</div>
					</nav><!-- #nav -->
				</div>
			{% endblock %}
		</header>
		<!-- LEFT BAR -->
		<aside id="left-col" class="uk-light uk-visible@m">
            {% if side_menu %}
			<div class="bar-content uk-position-relative">
            	{% include "side_menu.twig" with {'side_menu': side_menu} %}
			</div>
            {% endif %}
            {% if left_sidebar_top %}
			<div class="bar-content uk-position-relative">
                {{left_sidebar_top}}
			</div>
            {% endif %}
            {% block left %}
            {% endblock %}
			<div class="uk-position-bottom">
				<div class="uk-grid uk-grid-small uk-flex uk-flex-middle" data-uk-grid>
                    {{left_sidebar_bottom}}
                   <!-- widget area left sidebar bottom-->
				</div>
			</div>
			<div class="uk-position-bottom bar-bottom">
				<ul class="uk-subnav uk-flex uk-flex-center uk-child-width-1-6" data-uk-grid>
					<li>
						<a href="{{ site.url }}" class="uk-icon-link" data-uk-icon="icon: home"></a>
					</li>
					<li>
						<a href="#" class="uk-icon-link" data-uk-icon="icon: settings"></a>
					</li>
					<li>
						<a href="#" class="uk-icon-link" data-uk-icon="icon: social"></a>
					</li>
					<li>
						<a href="#" class="uk-icon-link" data-uk-icon="icon: comment"></a>
					</li>
					<li>
						<a href="#" class="uk-icon-link" data-uk-tooltip="Sign out" data-uk-icon="icon: sign-out"></a>
					</li>
				</ul>
			</div>
		</aside>
		<!-- /LEFT BAR -->
		<!-- CONTENT -->
		<div id="content" data-uk-height-viewport="expand: true">
			<div class="uk-container uk-container-expand">
				<div class="uk-container">
                    {% if title %}<h1>{{title}}</h1>{% endif %}
                    {% block content %}
						Sorry, no content
                    {% endblock %}
				</div>
			</div>
		</div>

		{% block footer %}
			<footer id="footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</div>
		<script src="{{ site.theme.link }}/static/js/uikit.min.js"></script>
		<script src="{{ site.theme.link }}/static/js/uikit-icons.min.js"></script>
	</body>
</html>
